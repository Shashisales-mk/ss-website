<% layout("/layouts/boilerplate") %>

<style>
  .og{
  background-color: #fdfafe;
}
.login-page{
  width: 450px;
  height: 100vh;
  margin: auto;
  background-color: #fdfafe;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  flex-direction: column;
  gap: 3rem;
  padding: 3rem;
 
}




.form{
  width: 100%;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  flex-direction: column;
  gap: .3rem;
}

.form input{
  width: 100%;
  padding: .5rem;
  border: 2px solid #b3b0b0;
  border-radius: 4px;
}

.form label{
  font-size: 1.17rem;
  font-weight: bold;
}
.login-otp{
  margin-top: .8rem;
  color: blue;
  cursor: pointer;
}

.form button{
  background-color: #c4C800;
    color: black;
    font-size: .8rem;
    padding: .5rem 1.5rem;
    border: none;
    border-radius: 10px;
    margin-top: 1.5rem;
}







@media screen and (max-width : 650px) {
  .login-page{
      padding-top: 8rem;
      width: 90%;
  }
  
}
</style>

<div class="forgot-password-page login-page">
    <form action="/forgot-password" method="post" class="email-form form">
      <label for="email">Enter Email</label>
      <input type="email" name="email" id="email" required />
      <button type="submit">Send OTP</button>
    </form>
  </div>
  