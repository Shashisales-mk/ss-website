<% layout("/layouts/boilerplate") %>

<style>
    .bl{
        background-color: black;
    }
    #main-page {
        width: 100%;
    font-family: Arial, sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
    background-color: #000;
    color: #fff;
    margin-top: 1rem;
}

#survey-container {
    
    padding: 5vw;
    border-radius: 8px;
    
   
    width: 100%;
}

textarea {
    width: 100%;
    margin-bottom: 1rem;
}

#navigation {
    display: flex;
    justify-content: space-between;
    margin-top: 1rem;
}

.btn {
    padding: 0.5rem 1rem;
    background-color: #007bff;
    color: white;
    text-decoration: none;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

.btn:hover {
    background-color: #0056b3;
}

textarea{
    background:transparent ;
    color: white;
    border-bottom: 1px solid white;
    overflow-y: hidden;
    width: 100%;
    height: 100px;
}
</style>
<body>
    <div id="main-page">
    <div id="survey-container">
        <h1>Information About Your Project</h1>
        <form action="/submit" method="POST">
            <h2><%= questionNumber %> -> <%= question.text %></h2>
            
            
            <% if (question.type === 'text') { %>
                <textarea name="answer" rows="4" cols="50" required></textarea>
            <% } else if (question.type === 'mcq') { %>
                <% question.options.forEach((option, index) => { %>
                    <div>
                        <input type="radio" id="option<%= index %>" name="answer" value="<%= option %>" required>
                        <label for="option<%= index %>"><%= option %></label>
                    </div>
                <% }) %>
            <% } %>
            
            <input type="hidden" name="questionId" value="<%= question._id %>">
            <input type="hidden" name="questionNumber" value="<%= questionNumber %>">
            
            <div id="navigation">
                <% if (questionNumber > 1) { %>
                    <a href="/?q=<%= questionNumber - 1 %>" class="btn">Previous</a>
                <% } %>
                
                <button type="submit" class="btn">
                    <%= questionNumber === totalQuestions ? 'Submit' : 'Next' %>
                </button>
            </div>
        </form>
        <!-- <p><%= questionNumber %> of <%= totalQuestions %></p> -->
    </div>
</div>
</body>
