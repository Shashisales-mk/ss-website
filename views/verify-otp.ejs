<% layout("/layouts/boilerplate") %>

<style>
  .bl{
    background-color: black;
  }
  /* login page */
  .ipu{
    width: 100%;
  }
.gap {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 70vh;
    margin-top: 5rem;
}

.gap .login-container {
    width: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    gap: 1rem;
    box-shadow: rgba(0, 0, 0, 0.19) 0px 10px 20px, rgba(0, 0, 0, 0.23) 0px 6px 6px;
    padding: 2rem;
    margin-inline: .6rem;
}

.gap .login-container form {
    width: 100%;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    flex-direction: column;
    gap: 1rem;
}

.gap .login-container form .remember {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    /* flex-direction: column; */
    gap: .6rem;
    font-size: .8rem;
}


.login-container input[type="text"],
.login-container input[type="email"],
.login-container input[type="password"] {
    width: 100%;
    padding: 10px;
    margin-bottom: 10px;
    border: none;
    box-shadow: rgba(0, 0, 0, 0.19) 0px 10px 20px, rgba(0, 0, 0, 0.23) 0px 6px 6px;
    margin-top: .8rem;
}

.login-btn {
    background-color: #c4C800;
    color: black;
    font-size: .8rem;
    padding: .5rem 1.5rem;
    border: none;
    border-radius: 10px;
}


</style>


  <div class="gap">
    <div class="verify-otp-page login-page login-container">
    <form action="/verify-otp" method="post" class="otp-form form">
      <div class="ipu">
        <label for="email">Enter Email</label>
      <input type="email" name="email" id="email" required />
      </div>
      <div class="ipu">
        <label for="otp">Enter OTP</label>
      <input type="text" name="otp" id="otp" required />
      </div>
      <div class="ipu">
        <label for="newPassword">Enter New Password</label>
      <input type="password" name="newPassword" id="newPassword" required />
      </div>
      <button type="submit" class="login-btn">Reset Password</button>
    </form>
  </div>
  </div>