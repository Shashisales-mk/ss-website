    .ads-edit-cont{
        padding: 1rem;
        display: flex;
        justify-content: center;
        font-size: 1.2rem;
    }
    .ads-edit-cont p{
        font-size: 0.8rem;
    }
    h1{
        margin-top: 2rem !important;
        text-align: center !important;
    }
    .admin-ads{
        display: grid;
        gap: 1rem;
    }
    .ads-edit-cont form{
        width: 50%;
        /* background: #d9d9d9c2; */
        /* padding: 2rem; */
