<!-- editAd.ejs -->
<h1>Edit Ad</h1>
<div class="ads-edit-cont">
    <form action="/updateAd/<%= ad._id %>" method="POST" enctype="multipart/form-data">
    <div class="admin-ads">
        <div class="dfg">
            <input
                type="text"
                id="title"
                name="title"
                value="<%= ad.title %>"
                placeholder="Enter Ad Title"
                required
            />
            <input
                type="url"
                id="link"
                name="linkPath"
                value="<%= ad.linkPath %>"
                placeholder="Enter Ad Link"
                required
            />
        </div>
        <div>
            <input type="file" name="ad" accept="image/*,video/*" />
            <p>Current file: <%= ad.filePath %></p>
        </div>

        <div class="dfagjs">
            <span>
                <label for="startDate">Start Date:</label>
                <input
                    style="margin-right: 2rem"
                    type="date"
                    id="startDate"
                    name="startDate"
                    value="<%= new Date(ad.startDate).toISOString().split('T')[0] %>"
                    required
                />
            </span>

            <span>
                <label for="endDate">End Date:</label>
                <input
                    type="date"
                    id="endDate"
                    name="endDate"
                    value="<%= new Date(ad.endDate).toISOString().split('T')[0] %>"
                    required
                />
            </span>
        </div>

        <div class="dfagjs">
            <span>
                <label for="startTime">Start Time:</label>
                <input
                    style="margin-right: 2rem"
                    type="time"
                    id="startTime"
                    name="startTime"
                    value="<%= ad.startTime %>"
                    required
                />
            </span>

            <span>
                <label for="endTime">End Time:</label>
                <input
                    type="time"
                    id="endTime"
                    name="endTime"
                    value="<%= ad.endTime %>"
                    required
                />
            </span>
        </div>

        <div class="active-days">
            <label>Active Days:</label><br><br>
            <% ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'].forEach(day => { %>
            <label>
                <input type="checkbox" name="activeDays" value="<%= day %>" <%= ad.activeDays.includes(day) ? 'checked' : '' %> />
                <%= day %>
            </label>
            <% }) %>
        </div>

        <div style="display: flex;justify-content: center;">
            <button type="submit">Update</button>
        </div>
    </div>
    </form>

</div>
